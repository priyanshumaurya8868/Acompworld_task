<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:gravity="start"
    android:background="@drawable/item_bc"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_ac_type_preview"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_75sdp"
        tools:src="@drawable/split_ac_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/tv_model_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:text="Daikin 2 Ton 4 star window Ac"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_ac_type_preview"
        android:paddingTop="@dimen/_3sdp"
        android:paddingEnd="@dimen/_2sdp"/>
    <TextView
        android:id="@+id/fixed_tv_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Purchased:"
        android:layout_below="@+id/tv_model_no"
        android:textColor="@color/dark_gray"
        android:padding="@dimen/_2sdp"
        android:layout_toEndOf="@id/iv_ac_type_preview"/>
    <TextView
        android:id="@+id/tv_purchased_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Purchased:"
        android:layout_below="@+id/tv_model_no"
        android:textColor="@color/dark_gray"
        android:padding="@dimen/_2sdp"
        android:layout_toEndOf="@+id/fixed_tv_purchased"/>

    <TextView
        android:id="@+id/tv_installed_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Living Room"
        android:textColor="@color/navy_blue"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
      android:layout_below="@id/tv_purchased_from"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"/>




</RelativeLayout>